<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogNoTitle" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item><!--除去title-->
        <!--<item name="android:backgroundDimEnabled">false</item>&lt;!&ndash; dim:模糊的 阴影效果 &ndash;&gt;-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="dialogAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_push_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_push_out</item>
    </style>
    <!--主界面不要透明,否则就显示桌面了~-->
    <style name="AppThemeNoTranslucent" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppWelcome" parent="AppThemeNoTranslucent">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

</resources>

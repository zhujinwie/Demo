<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity"
    android:id="@+id/root"
    >

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <zsy.jt.com.demo.utils.VideoPlayerIJK
        android:id="@+id/ijk_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:background="@mipmap/timg4"
        >

    </zsy.jt.com.demo.utils.VideoPlayerIJK>

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_centerInParent="true">

    </FrameLayout>

    <!--<TextView-->
    <!--android:id="@+id/log"-->
    <!--android:layout_marginTop="30dp"-->
    <!--android:layout_width="match_parent"-->
    <!--android:textColor="@color/white"-->
    <!--android:textSize="20sp"-->
    <!--android:layout_height="wrap_content" />-->
    <RelativeLayout
        android:id="@+id/right_parent"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="#58615c5c"
        android:visibility="invisible">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="NOTES"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title"
            android:layout_marginTop="32dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

        </android.support.v7.widget.RecyclerView>


    </RelativeLayout>


    <TextView
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="24dp"
        android:textColor="@color/white"
        android:textSize="50sp" />


   <zsy.jt.com.demo.utils.HouseLoadingView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/houser"
       />

</RelativeLayout>
